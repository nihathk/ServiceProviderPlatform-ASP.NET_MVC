@model UstamOdev.Models.is_ilanlari

@{
    ViewBag.Title = "İlan Kaldır";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<br />
<div align="center">
    <h3 style='background:#FF6800' class="text-light">Bu ilanı yayından kaldırmak istediğinize emin misiniz?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.is_tur)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.is_tur)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.is_aciklama)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.is_aciklama)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.is_ortalama_fiyat)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.is_ortalama_fiyat)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Tüm İlanlara Dön", "Isler", "Admin", new { @class = "btn btn-secondary" })
                <input type="submit" value="Kaldır" class="btn btn-danger" />

            </div>
        }
    </div>
</div>