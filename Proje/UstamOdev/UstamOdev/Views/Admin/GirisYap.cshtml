@model UstamOdev.Models.adminler

@{
    ViewBag.Title = "Admin Giriş";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <br />
    <br />
    <br />
<div align="center">
    <h2 style='background:#FF6800' class="text-light">Admin Giriş Sayfası</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.admin_email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.admin_email, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı" } })
                    @Html.ValidationMessageFor(model => model.admin_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.admin_sifre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.admin_sifre, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre" } })
                    @Html.ValidationMessageFor(model => model.admin_sifre, "", new { @class = "text-danger" })

                    @if (ViewBag.hata != null)
                    {
                        <span class="badge badge-danger alert-danger">@ViewBag.hata</span>
                    }

                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Giriş Yap" class="btn btn-success" />
                </div>
            </div>
        </div>

    }
</div>