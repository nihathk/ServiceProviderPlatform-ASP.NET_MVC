@model UstamOdev.Models.is_ilanlari

@{
    ViewBag.Title = "Fiyat Ver";
    Layout = "~/Views/Shared/_UstaLayout.cshtml";
}
<br />
<br />
<br />
<div align="center">
    <h2>Yeni Fiyat Ver</h2>
    <div class="row justify-content-md-center">
        <div class="col-md-7">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card" style='background:#FF6800'>
                    <hr />
                    <div class="card-body" style='background:#adadad'>
                        <div class="form-group">
                            @Html.LabelFor(model => model.is_tur, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.DropDownList("is_tur", new List<SelectListItem> {
                           new SelectListItem
                           {
                               Text="Boya/Badana",
                               Value="Boya/Badana",
                           },
                           new SelectListItem
                           {
                               Text="Temizlik",
                               Value="Temizlik",
                           },
                           new SelectListItem
                           {
                               Text="Nakliye",
                               Value="Nakliye",
                           },
                           new SelectListItem
                           {
                               Text="Tamirat",
                               Value="Tamirat",
                           },
                           new SelectListItem
                           {
                               Text="Araç Servis",
                               Value="Araç Servis",
                           },
                           new SelectListItem
                           {
                               Text="Dekorasyon",
                               Value="Dekorasyon",
                           }}, new { @class = "form-control col-md-5" })
                                @Html.ValidationMessageFor(model => model.is_tur, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.is_aciklama, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.is_aciklama, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.is_aciklama, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.is_ortalama_fiyat, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.is_ortalama_fiyat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.is_ortalama_fiyat, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" style="margin-top:1em">
                            <input type="submit" value="Fiyat Ver" class="btn btn-success" />

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Aktif İşlere Dön", "Aktifler", "null", new { @class = "btn btn-secondary" })
</div>
