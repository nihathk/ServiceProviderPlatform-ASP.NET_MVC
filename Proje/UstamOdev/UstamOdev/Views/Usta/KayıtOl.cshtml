@model UstamOdev.Models.ustalar
@{
    ViewBag.Title = "Usta Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<div align="center">
    <h2>Usta Kayıt</h2>

    <div class="row justify-content-md-center">
        <div class="col-md-7">
            @using (Html.BeginForm("KayıtOl", "Usta", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="card" style='background:#FF6800'>
                    <hr />
                    <div class="card-body" style='background:#adadad'>
                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_email, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.usta_email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-Posta" } })
                                @Html.ValidationMessageFor(model => model.usta_email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_sifre, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.usta_sifre, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre" } })
                                @Html.ValidationMessageFor(model => model.usta_sifre, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_isim_soyisim, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.usta_isim_soyisim, new { htmlAttributes = new { @class = "form-control", placeholder = "İsim Soyisim" } })
                                @Html.ValidationMessageFor(model => model.usta_isim_soyisim, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_tel, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.usta_tel, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefon" } })
                                @Html.ValidationMessageFor(model => model.usta_tel, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_il, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.DropDownList("usta_il", new List<SelectListItem> {
                           new SelectListItem
                           {
                               Text="Antalya",
                               Value="Antalya",
                           },
                           new SelectListItem
                           {
                               Text="Adana",
                               Value="Adana",
                           },
                           new SelectListItem
                           {
                               Text="Ankara",
                               Value="Ankara",
                           },
                           new SelectListItem
                           {
                               Text="Aydın",
                               Value="Aydın",
                           },
                           new SelectListItem
                           {
                               Text="İstanbul",
                               Value="İstanbul",
                           },
                           new SelectListItem
                           {
                               Text="Mersin",
                               Value="Mersin",
                           },
                           new SelectListItem
                           {
                               Text="Çanakkale",
                               Value="İstanbul",
                           },
                           new SelectListItem
                           {
                               Text="Van",
                               Value="Van",
                           },
                           new SelectListItem
                           {
                               Text="Batman",
                               Value="Batman",
                           },
                           new SelectListItem
                           {
                               Text="İzmir",
                               Value="İzmir",
                           },
                           new SelectListItem
                           {
                               Text="Eskişehir",
                               Value="Eskişehir",
                           }}, new { @class = "form-control col-md-5" })
                                @Html.ValidationMessageFor(model => model.usta_il, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_unvan, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.usta_unvan, new { htmlAttributes = new { @class = "form-control", placeholder = "Ünvan" } })
                                @Html.ValidationMessageFor(model => model.usta_unvan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.usta_sertifika, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                <input type="file" name="sertifika" required />
                            </div>
                        </div>

                        <div class="form-group" style="margin-top:1em">
                            <input type="submit" value="Kayıt Ol" class="btn btn-success" />
                            @if (ViewBag.error != null)
                            {
                                <span class="badge badge-danger alert-danger">@ViewBag.error</span>
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>